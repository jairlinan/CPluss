<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <h2>Editar Animal</h2>
                </div>
                <div class="card-body">
                    <form action="/links/editA/{{links.idanimal}}" method="POST">
                        <div class="form-group">
                            <input type="text" name="fincaid" value="{{links.fincaid}}" class="form-control" placeholder="ID Finca" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="compraid" value="{{links.compraid}}" class="form-control" placeholder="ID de la compra" >
                        </div>
                        <div class="form-group">
                            <input type="text" name="chapeta" value="{{links.chapeta}}" class="form-control" placeholder="Chapeta del animal" >
                        </div>
                        <div class="form-group">
                            <input type="text" name="peso" value="{{links.peso}}" class="form-control" placeholder="Peso del animal">
                        </div>
                        <div class="form-group">
                            <input type="text" name="color" value="{{links.color}}" class="form-control" placeholder="Color del animal">
                        </div>
                        <div class="form-group">
                            <input type="text" name="genero" value="{{links.genero}}" class="form-control" placeholder="Genero">
                        </div>
                         <div class="form-group">
                            <input type="text" name="vrmacho" value="{{links.vrmacho}}" class="form-control" placeholder="Valor Macho">
                        </div>
                        <div class="form-group">
                            <input type="text" name="vrhembra" value="{{links.vrhembra}}" class="form-control" placeholder="Valor Hembra">
                        </div>
                        
                    
                        <input type="submit" class="btn btn-primary btn-block" value="Agregar">
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>