<div class="container p-2">
    <div class="row">
        <div class="col-md-9">
            <h1 class="text-center text-muted">Relación de Fincas</h1>
        </div>
        <div class="col-md-3">
            <a href="/links/addF" class="btn btn-success">Nueva Finca</a>
        </div>
    </div>
    <div class="row mt-1">
        <div class="col-md-10">
            <table class="table table-bordered table-hover">
                <thead>                  
                    <tr class="text-center">
                        <th>#</th>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Ubicación</th>
                        <th>ID Proveedor</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>                        
                    {{#each links }}
                    <tr>
                        <td class="text-right"> {{  @index }} </td>
                        <td class="text-right"> {{idfinca}} </td>
                        <td> {{namefinca}} </td>
                        <td> {{location}} </td>
                        <td class="text-right"> {{provid}} </td>
                        <td>
                            <a href="/links/editF/{{idfinca}}" class="btn btn-info">Update</a>
                            <a href="/links/deleteF/{{idfinca}}" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    {{else}}
                        <div class="col-md-3 mx-auto p-1">
                                <p>No hay registros</p>
                                <a href="/links/addF" class="btn btn-info">Ingresar Uno</a>
                        </div>
                    {{/each}}                       
                </tbody>
            </table>
        </div>

    </div>
</div>