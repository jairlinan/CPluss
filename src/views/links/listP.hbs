<div class="container p-4">
    <div class="row mt-5">
        <div class="col-md-12">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <h1 class="text-center text-muted">Relación de Proveedores</h1>
                    </tr>
                    <tr class="text-center">
                        <th>#</th>
                        <th>CC o NIT</th>
                        <th>Nombre</th>
                        <th>Dirección</th>
                        <th>Telefono</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    {{!-- {{#if (links) { }} --}}
                        {{#each links }}
                            <tr>
                                <td class="text-right"> {{  @index }} </td>
                                <td class="text-right"> {{cc}} </td>
                                <td> {{fullname}} </td>
                                <td> {{dir}} </td>
                                <td class="text-right"> {{phone}} </td>
                                <td class="mx-auto"> 
                          <a href="/updateP/{{links.cc}}" class="btn btn-info">Update</a>
                          <a href="/deleteP/{{links.cc}}" class="btn btn-danger mx-auto">Delete</a>
                        </td>
                            </tr>
                        {{/each}}
                    {{!-- {{/if } }} --}}
                                
                </tbody>
            </table>
        </div>
       
    </div>
</div>