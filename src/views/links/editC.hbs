<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <h2>Agregar Compra</h2>
                </div>
                <div class="card-body">
                    <form action="/links/editC/{{links.idcompra}}" method="POST">
                        <div class="form-group">
                            <input type="text" name="fincaid" value="{{links.fincaid}}" class="form-control" placeholder="ID Finca" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="fecha" value="{{links.fecha}}" class="form-control" placeholder="Fecha de compra">
                        </div>
                        <div class="form-group">
                            <input type="text" name="guia" value="{{links.guia}}" class="form-control" placeholder="Número de la guía" >
                        </div>
                        <div class="form-group">
                            <input type="text" name="vrflete" value="{{links.vrflete}}" class="form-control" placeholder="Valor del flete">
                        </div>
                        <div class="form-group">
                            <input type="text" name="nviajes" value="{{links.nviajes}}" class="form-control" placeholder="Número de Viajes">
                        </div>
                        
                    
                        <input type="submit" class="btn btn-primary btn-block" value="Agregar">
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>